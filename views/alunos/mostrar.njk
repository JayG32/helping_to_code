{% extends "layout.njk" %}

{% block content %}
    <div class="card">

        <section class="avatar" 
            style="background: url({{aluno.avatar_url}}) no-repeat center center / cover" >
        </section>
       
        <section class="detalhes">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome</div>
                <div>{{alunos.nome}}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{alunos.email}}</div>
            </div>

            <div class="item">
                <div>Aniversario</div>
                <div>{{alunos.aniversario}}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{"Masculino " if alunos.sexo == "M" else "Feminino"}}</div>
            </div>

            <!-- -->
            <div class="item">
                <div>Curso</div>
                <div>{{alunos.curso}}</div>
            </div>

            <a href="/alunos/{{aluno.id}}/editar" class="button">Editar</a>
        </section>

    </div>
{% endblock content %}