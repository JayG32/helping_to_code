{% extends "layout.njk" %}

{% block content %}
     
    <div class="card">
        <section class="avatar" 
            style="background: url({{professor.avatar_url}}) no-repeat center center / cover" >
        </section>

        <section class="detalhes">
            <form method="POST" action="/professores?_method=PUT">
                <h3>Editar professor</h3>

                {% include 'professores/campos.njk' %}
                
                <input type="hidden" name="id" value="{{professor.id}}">
            </form>

            <form id="form-deletar" method="POST" action="/professores?_method=DELETE">
                <input type="hidden" name="id" value="{{professor.id}}">
                <button type="submit">Deletar</button>
            </form>

            

        </section>
    </div>

    {% include 'professores/confirmacao.njk' %}
    
{% endblock content %}