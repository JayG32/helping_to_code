{% extends "layout.njk" %}

{% block content %}
    <div class="card">

        <section class="avatar" 
            style="background: url({{professor.avatar_url}}) no-repeat center center / cover" >
        </section>
       
        <section class="detalhes">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome</div>
                <div>{{professor.nome}}</div>
            </div>

            <div class="item">
                <div>email</div>
                <div>{{professor.email}}</div>
            </div>

             <div class="item">
                <div>Data de nascimento</div>
                <div>{{professor.nascimento}}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{"Masculino " if professor.sexo == "M" else "Feminino"}}</div>
            </div>

            <!-- -->
            <div class="item">
                <div>Cursos</div>
                <div>
                    {%for servico in professor.servicos%}
                        <span>{{ servico }}</span>
                    {%endfor%}
                </div>
            </div>
            

            <div class="item">
                <div>Desde</div>
                <div>{{professor.created_at}}</div>
            </div>

            <a href="/professores/{{professor.id}}/editar" class="button">Editar</a>
        </section>

    </div>
{% endblock content %}